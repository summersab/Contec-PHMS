<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:user="http://schemas.android.com/apk/res-auto" xmlns:app="http://schemas.android.com/apk/res/com.contec" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/pop_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/pop_top_image" android:background="@drawable/drawable_data_userpop_top" android:layout_width="wrap_content" android:layout_height="40dp"/>
        <ListView android:id="@+id/pop_center_list" android:background="@drawable/drawable_data_userpop_center" android:paddingLeft="28dp" android:paddingRight="28dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:listSelector="#00000000" android:cacheColorHint="@color/transparent" android:divider="@drawable/drawable_data_userpop_divider"/>
        <LinearLayout android:gravity="top|center_vertical|center_horizontal|center" android:id="@+id/pop_bot_add_layout" android:background="@drawable/drawable_data_userpop_bot" android:paddingTop="10dp" android:layout_width="wrap_content" android:layout_height="80dp">
            <ImageView android:layout_width="40dp" android:layout_height="40dp" user:srcCompat="@drawable/drawable_data_pop_addcount"/>
            <TextView android:textSize="19sp" android:textColor="@color/black" android:id="@+id/pop_bot_add" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="30dp" android:text="@string/pop_add_count"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
