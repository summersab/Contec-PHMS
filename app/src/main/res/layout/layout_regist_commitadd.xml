<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:my="http://schemas.android.com/apk/res/com.contec.phms" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:user="http://schemas.android.com/apk/res-auto" xmlns:app="http://schemas.android.com/apk/res/com.contec" android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/register_commitadd_linearlayout" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout style="@style/style_set_title_layout">
        <Button style="@style/style_set_title_back"/>
        <TextView android:text="@string/register" style="@style/style_set_title_text"/>
    </RelativeLayout>
    <ImageView android:id="@+id/regis2_blank" android:layout_width="wrap_content" android:layout_height="10dp"/>
    <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/register_password_layout" android:background="@drawable/drawable_login_input_box_top" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textSize="23sp" android:textColor="#444444" android:layout_gravity="center_vertical" android:id="@+id/psw" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="13dp" android:layout_marginRight="13dp" android:text="@string/register_input_psw"/>
        <EditText android:textSize="18sp" android:textColor="#7a7a7a" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/input_user_password" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/register_set_psw" android:password="true" android:layout_weight="1" android:inputType="number"/>
    </LinearLayout>
    <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/register_commit_secondpassword_layout" android:background="@drawable/drawable_login_input_box_bottom" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textSize="23sp" android:textColor="#444444" android:layout_gravity="center_vertical" android:id="@+id/surepsw" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="13dp" android:layout_marginRight="13dp" android:text="@string/register_sure_input_psw"/>
        <EditText android:textSize="18sp" android:textColor="#7a7a7a" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/ensure_user_password" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/register_sure_psw" android:password="true" android:layout_weight="1" android:inputType="number"/>
    </LinearLayout>
    <ImageView android:id="@+id/regis2_blank1" android:layout_width="wrap_content" android:layout_height="10dp"/>
    <Button android:textSize="23sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/send_phone_number_button" android:background="@drawable/drawable_next_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/register_finish"/>
</LinearLayout>
