        </LinearLayout>
        <ImageView android:id="@+id/regis3_blank2" android:layout_width="wrap_content" android:layout_height="10dp"/>
        <Button android:textSize="23sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/register_regist_btn" android:background="@drawable/drawable_next_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/next"/>
        <ImageView android:id="@+id/regis3_blank3" android:layout_width="wrap_content" android:layout_height="10dp"/>
