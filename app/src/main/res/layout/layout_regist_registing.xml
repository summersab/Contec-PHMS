            <TextView android:textSize="23sp" android:textColor="#444444" android:layout_gravity="center_vertical" android:id="@+id/code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="13dp" android:layout_marginRight="13dp" android:text="@string/register_input_code"/>
