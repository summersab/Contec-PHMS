            <TextView android:textSize="18sp" android:textColor="#444444" android:gravity="center_vertical" android:id="@+id/registercountdown" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="60" android:layout_toRightOf="@+id/register_againe_send_phone_securitycode_btn" android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
