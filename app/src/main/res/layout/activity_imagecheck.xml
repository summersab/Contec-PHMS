<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/imagelayout" android:background="#cccccc" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rrr1" android:background="@drawable/tbackg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentTop="true">
        <TextView android:id="@+id/dirtext" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
        <ImageButton android:id="@+id/dirButton" android:background="#00000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="0dp" app:srcCompat="@drawable/right" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <ImageButton android:id="@+id/ceButton" android:background="#00000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" app:srcCompat="@drawable/back_style" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView android:textSize="16dp" android:textColor="#f42200" android:id="@+id/text2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="请选择只包含二维码的图片" android:layout_below="@+id/rrr1" android:layout_centerHorizontal="true"/>
    <GridView android:id="@+id/imagegridview" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="8dp" android:horizontalSpacing="8dp" android:verticalSpacing="8dp" android:numColumns="3" android:layout_below="@+id/text2"/>
</RelativeLayout>
