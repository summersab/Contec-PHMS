<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:user="http://schemas.android.com/apk/res-auto" xmlns:app="http://schemas.android.com/apk/res/com.contec" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/image_phme_icon" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginLeft="12dp" android:layout_marginRight="16dp" user:srcCompat="@drawable/img_phms_icon" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
    <RelativeLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/right_layout" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginRight="10dp" android:layout_toRightOf="@+id/image_phme_icon" android:layout_centerVertical="true">
        <TextView android:textSize="18sp" android:textColor="@color/white" android:id="@+id/tv_rv" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/step_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true">
            <TextView android:textSize="18sp" android:textColor="@color/white" android:id="@+id/runed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/tv_rv"/>
            <TextView android:textSize="18sp" android:textColor="@color/white" android:id="@+id/bet" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/bet"/>
            <TextView android:textSize="18sp" android:textColor="@color/white" android:id="@+id/aim" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <RelativeLayout android:id="@+id/progressLayout" android:layout_width="match_parent" android:layout_height="13dp" android:layout_marginTop="5dp" android:layout_below="@+id/step_layout">
            <ProgressBar android:id="@+id/pb_rv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="30dp" android:maxHeight="6dp" android:progressDrawable="@drawable/progressbg" android:minHeight="6dp" android:layout_centerVertical="true" style="?android:attr/progressBarStyleHorizontal"/>
            <FrameLayout android:id="@+id/progressControl" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="-3dp">
                <RelativeLayout android:layout_gravity="top" android:layout_width="match_parent" android:layout_height="match_parent">
                    <TextView android:textSize="14sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/progresstx" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="100%" android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </FrameLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
