<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:background="#f5f5f5" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout style="@style/style_set_register_title_layout">
        <Button android:id="@+id/back_btn" style="@style/style_set_register_title_back"/>
        <TextView android:text="@string/register_input_select" style="@style/style_set_register_title_text"/>
    </RelativeLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/to_mail_register" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp">
        <ImageView android:clickable="false" android:layout_width="25dp" android:layout_height="25dp" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="15dp" android:layout_marginBottom="10dp" app:srcCompat="@drawable/green_mail_icon"/>
        <Button android:gravity="left|center_vertical|center_horizontal|center" android:background="@color/white" android:clickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/register_input_mail"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/to_phone_register" android:background="@color/white" android:paddingTop="2dp" android:paddingBottom="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp">
        <ImageView android:clickable="false" android:layout_width="21dp" android:layout_height="21dp" android:layout_marginLeft="12dp" android:layout_marginTop="10dp" android:layout_marginRight="15dp" android:layout_marginBottom="10dp" app:srcCompat="@drawable/green_phone"/>
        <Button android:gravity="left|center_vertical|center_horizontal|center" android:background="@color/white" android:clickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/register_input_mobile"/>
    </LinearLayout>
</LinearLayout>
