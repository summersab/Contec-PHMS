<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:my="http://schemas.android.com/apk/res/com.contec.phms" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:user="http://schemas.android.com/apk/res-auto" xmlns:app="http://schemas.android.com/apk/res/com.contec" android:orientation="vertical" android:background="#00000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="80dp">
        <RelativeLayout android:background="#eafaf0" android:layout_width="match_parent" android:layout_height="80dp" android:layout_marginTop="5dp" android:layout_marginRight="5dp">
            <ImageView android:layout_width="80dp" android:layout_height="80dp" android:layout_marginLeft="-24dp" user:srcCompat="@drawable/ic_set_search_mode_light" android:layout_alignParentLeft="true"/>
            <TextView android:textSize="20sp" android:textColor="#35cd63" android:gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/set_search_mode_info1" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <ImageView android:layout_gravity="right" android:id="@+id/iv_close_dialog" android:layout_width="20dp" android:layout_height="20dp" user:srcCompat="@drawable/img_close" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View android:background="@color/white" android:layout_width="match_parent" android:layout_height="22dp" android:layout_marginRight="5dp"/>
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/rl_new_ble" android:background="@color/white" android:paddingLeft="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="5dp">
        <ImageView android:id="@+id/iv_img_new_ble_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" user:srcCompat="@drawable/img_new_ble_icon" android:layout_centerVertical="true"/>
        <TextView android:textSize="16sp" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="13.3dp" android:text="@string/new_BLE" android:layout_toRightOf="@+id/iv_img_new_ble_icon" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/iv_new_right" android:layout_width="15dp" android:layout_height="15dp" android:layout_marginRight="20dp" user:srcCompat="@drawable/img_right" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:background="@color/white" android:layout_width="match_parent" android:layout_height="7.3dp" android:layout_marginRight="5dp"/>
    <LinearLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginRight="5dp">
        <TextView android:background="#efeff5" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>
    </LinearLayout>
    <View android:background="@color/white" android:layout_width="match_parent" android:layout_height="7.3dp" android:layout_marginRight="5dp"/>
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/rl_old_ble" android:background="@color/white" android:paddingLeft="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="5dp">
        <ImageView android:id="@+id/iv_img_old_ble_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" user:srcCompat="@drawable/img_new_ble_icon" android:layout_centerVertical="true"/>
        <TextView android:textSize="16sp" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="13.3dp" android:text="@string/old_BLE" android:layout_toRightOf="@+id/iv_img_old_ble_icon" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/iv_old_right" android:visibility="invisible" android:layout_width="15dp" android:layout_height="15dp" android:layout_marginRight="20dp" user:srcCompat="@drawable/img_right" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:background="@color/white" android:layout_width="match_parent" android:layout_height="23dp" android:layout_marginRight="5dp"/>
    <LinearLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="5dp">
        <Button android:textSize="18sp" android:textColor="@color/white" android:id="@+id/btn_sure_search_mode" android:background="#33cc60" android:paddingTop="13dp" android:paddingBottom="13dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="34dp" android:layout_marginRight="34dp" android:text="@string/str_sure"/>
    </LinearLayout>
    <View android:background="@color/white" android:layout_width="match_parent" android:layout_height="23dp" android:layout_marginRight="5dp"/>
</LinearLayout>
