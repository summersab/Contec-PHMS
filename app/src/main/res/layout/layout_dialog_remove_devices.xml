<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:user="http://schemas.android.com/apk/res-auto" xmlns:app="http://schemas.android.com/apk/res/com.contec" android:gravity="center" android:orientation="vertical" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="23sp" android:textColor="#ffff" android:gravity="center" android:id="@+id/titletext" android:background="@drawable/drawable_nav_bar" android:layout_width="match_parent" android:layout_height="0dp" android:text="@string/str_xiaxian" android:layout_weight="1"/>
    <RelativeLayout android:orientation="vertical" android:background="#ffff" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="3">
        <LinearLayout android:orientation="horizontal" android:id="@+id/tempbuttonly" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:layout_alignParentBottom="true">
            <Button android:textSize="18sp" android:textColor="@drawable/drawable_versionupdata_tvselect" android:gravity="center" android:id="@+id/cancle" android:background="@drawable/drawable_loginpage_button_right_angle_register_new" android:layout_width="0dp" android:layout_height="40dp" android:layout_marginLeft="16dp" android:layout_marginRight="8dp" android:text="@string/str_cancle" android:layout_weight="1"/>
            <Button android:textSize="18sp" android:textColor="@drawable/drawable_versionupdata_tvselect" android:gravity="center" android:id="@+id/sure" android:background="@drawable/drawable_login_right_angle_button" android:layout_width="0dp" android:layout_height="40dp" android:layout_marginLeft="8dp" android:layout_marginRight="16dp" android:text="@string/str_sure" android:layout_weight="1"/>
        </LinearLayout>
        <TextView android:textSize="19sp" android:textColor="#0000" android:gravity="center" android:id="@+id/show_msg" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/str_login_another_place" android:layout_above="@+id/tempbuttonly" android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>
