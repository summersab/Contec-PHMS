<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:my="http://schemas.android.com/apk/res/com.contec.phms" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:user="http://schemas.android.com/apk/res-auto" xmlns:app="http://schemas.android.com/apk/res/com.contec" android:orientation="vertical" android:id="@+id/laout_productdataa_adapter_main" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/productimage_layout" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:layout_gravity="center" android:id="@+id/product_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="fitXY"/>
    </LinearLayout>
    <TextView android:textSize="@dimen/product_name_size" android:textColor="#444444" android:gravity="center_horizontal" android:layout_gravity="center" android:id="@+id/product_name" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:textSize="13sp" android:textColor="#027487" android:gravity="center_horizontal" android:layout_gravity="center" android:id="@+id/product_type" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>
