<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:user="http://schemas.android.com/apk/res-auto" xmlns:app="http://schemas.android.com/apk/res/com.contec" android:orientation="vertical" android:background="#00000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="80dp">
        <RelativeLayout android:background="#eafaf0" android:layout_width="match_parent" android:layout_height="80dp" android:layout_marginTop="5dp" android:layout_marginRight="5dp">
            <ImageView android:background="@drawable/mail_register" android:layout_width="80dp" android:layout_height="80dp" android:layout_marginLeft="-12dp" android:layout_marginTop="-6dp" android:layout_alignParentLeft="true"/>
            <TextView android:textSize="20sp" android:textColor="#35cd63" android:gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/mail_has_been_registered" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <ImageView android:layout_gravity="right" android:id="@+id/iv_close_dialog" android:layout_width="20dp" android:layout_height="20dp" user:srcCompat="@drawable/img_close" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="horizontal" android:background="@color/white" android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="5dp">
        <ImageView android:background="@drawable/green_mail_icon" android:layout_width="23dp" android:layout_height="23dp" android:layout_marginRight="10dp"/>
        <TextView android:textColor="@color/black" android:id="@+id/mail_address" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="akjdflajlf"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:background="@color/white" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="5dp">
        <Button android:textSize="18sp" android:textColor="@color/white" android:id="@+id/modify" android:background="#ff7f50" android:layout_width="80dp" android:layout_height="44dp" android:layout_marginRight="30dp" android:text="@string/modify"/>
        <Button android:textSize="18sp" android:textColor="@color/white" android:id="@+id/login" android:background="#33cc60" android:layout_width="80dp" android:layout_height="44dp" android:text="@string/login_new"/>
    </LinearLayout>
</LinearLayout>
