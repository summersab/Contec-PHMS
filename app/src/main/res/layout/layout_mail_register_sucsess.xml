<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:user="http://schemas.android.com/apk/res-auto" xmlns:app="http://schemas.android.com/apk/res/com.contec" android:orientation="vertical" android:background="#00000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="80dp">
        <RelativeLayout android:background="#eafaf0" android:layout_width="match_parent" android:layout_height="80dp" android:layout_marginTop="5dp" android:layout_marginRight="5dp">
            <ImageView android:background="@drawable/dialog_login_sucsess" android:layout_width="80dp" android:layout_height="80dp" android:layout_marginLeft="-12dp" android:layout_marginTop="-12dp" android:layout_alignParentLeft="true"/>
            <TextView android:textSize="20sp" android:textColor="#35cd63" android:gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/congratulation_register_sucsess" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <ImageView android:layout_gravity="right" android:id="@+id/iv_close_dialog" android:layout_width="20dp" android:layout_height="20dp" user:srcCompat="@drawable/img_close" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout android:gravity="center_vertical" android:background="@color/white" android:paddingLeft="20dp" android:paddingTop="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="5dp">
        <TextView android:textColor="#35cd63" android:layout_width="110dp" android:layout_height="wrap_content" android:text="@string/user_id_is" android:maxLines="1"/>
        <TextView android:textColor="@color/black" android:id="@+id/mail" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/new_BLE"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:background="@color/white" android:paddingLeft="20dp" android:paddingTop="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="5dp">
        <TextView android:textColor="#35cd63" android:layout_width="110dp" android:layout_height="wrap_content" android:text="@string/default_key"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textColor="@color/black" android:id="@+id/key" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="123456" android:layout_centerVertical="true"/>
            <ImageView android:id="@+id/modify_key" android:background="@drawable/dialog_login_sucsess_modify_key" android:layout_width="23dp" android:layout_height="23dp" android:layout_marginRight="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout android:background="@color/white" android:paddingTop="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="5dp">
        <Button android:textSize="18sp" android:textColor="@color/white" android:id="@+id/btn_login" android:background="#33cc60" android:paddingTop="13dp" android:paddingBottom="13dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="34dp" android:layout_marginRight="34dp" android:text="@string/login_new"/>
    </LinearLayout>
    <View android:background="@color/white" android:layout_width="match_parent" android:layout_height="23dp" android:layout_marginRight="5dp"/>
</LinearLayout>
